<h1>New Tree Metadata</h1>

<script>
	function json()  {
			var metadata = { "tree" : 
												{ "author" : "JSON Two", 
													"model_type" : "forest",
													"parser" : "default",
													"tree_amount" : 12323,
													"pr_id" : "usr_132134123213123",
													"note" : "This is a test",
													"accuracy" : 0.95 }
										 };
											
			$.post("/trees", metadata);
			return false;
	};
</script>

<%= form_for :tree, url: trees_path do |f| %>

	<% if @tree.errors.any? %>
	  <div id="error_explanation">
		<h2><%= pluralize(@tree.errors.count, "error") %> prohibited
		  this tree metadata from being saved:</h2>
		<ul>
		<% @tree.errors.full_messages.each do |msg| %>
		  <li><%= msg %></li>
		<% end %>
		</ul>
	  </div>
	<% end %>
  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :parser %><br>
    <%= f.text_field :model_type
  </p>

  <p>
    <%= f.label :model_type %><br>
    <%= f.text_field :model_type %>
  </p>

  <p>
    <%= f.label :tree_amount %><br>
    <%= f.text_field :tree_amount %>
  </p>

  <p>
    <%= f.label :accuracy %><br>
    <%= f.text_area :accuracy %>
  </p>

  <p>
    <%= f.label :pr_id %><br>
    <%= f.text_area :pr_id %>
  </p>
 
  <p>
    <%= f.label :accuracy %><br>
    <%= f.text_area :accuracy %>
  </p>

  <p>
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </p>
 
  <p>
    <%= f.submit %>
		<script>$( "input[name='commit']" ).on( "click", json );</script>
  </p>
<% end %>


